<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChartSampleApp"
        xmlns:USCL="clr-namespace:UnseonChartLib.USCL;assembly=UnseonChartLib"
        x:Class="ChartSampleApp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#cccccc" Closed="Window_Closed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <USCL:USLineChart x:Name="ui_usLineChart1" Margin="10px 10px 10px 0px" Background="#ffffff" Grid.Row="0"/>
        <USCL:USLineChart x:Name="ui_usLineChart2" Margin="10px" Background="#ffffff" Grid.Row="1"/>
    </Grid>
</Window>
